<p id="notice"><%= notice %></p>
<%= link_to 'Preferred Shops', preferred_path%>
<h1>Shops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Distance</th>
      <th>Shop image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.distance %></td>
        <td><%= image_tag(shop.shop_image.url)  %></td>
        <td><%= button_to 'like', like_shop_path(shop), method: :put, remote: true %></td>
        <td><%= button_to 'dislike', unlike_shop_path(shop), method: :put , remote: true%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop', new_shop_path %>
